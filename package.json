{
  "name": "keycard-desktop",
  "version": "2.0.0",
  "description": "Keycard Management Application",
  "main": "./out/app.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron ./out/app.js",
    "clean": "rm -rf out",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.github.choppu.keycard-desktop",
    "productName": "Keycard Desktop",
    "files": [
      "**/*",
      "!tsconfig.json",
      "!README.md",
      "!src"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "identity": null,
      "target": "zip"
    }
  },
  "author": "Ksenia Balistreri",
  "license": "MIT",
  "dependencies": {
    "@nonth/pcsclite": "^0.6.2",
    "bip39": "^3.1.0",
    "crypto-random-string": "^5.0.0",
    "electron-store": "^11.0.2",
    "keycard-sdk": "github:choppu/keycard-sdk",
    "qrcode": "^1.5.4",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/node": "^22.7.7",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  }
}
